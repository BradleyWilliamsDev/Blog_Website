<%- include("partials/navbar.ejs") %> <% if(locals.posts){ %>
<div class="blog-container">
  <% for (let i = 0; i < posts.length; i++) { %>
  <div class="blog-box">
    <div class="blog-text">
      <span>Author: <%= posts[i].author %></span>
      <a href="/blog/<%= posts[i].ID %>" class="blog-title">
        <%= posts[i].title %>
      </a>
      <p class="blog-text"><%= posts[i].content %></p>
      <!-- <p>Title: <%# posts[i].title %></p> -->
    </div>
    <div class="readmore">
      <a href="/blog/<%= posts[i].ID %>" class="blog-read"> read more </a>
    </div>
  </div>
  <% } %>
</div>
<% } else { %>
<H1>There is no content to show click compose to make a post</H1>
<% } %> <%- include("partials/footer.ejs") %>
